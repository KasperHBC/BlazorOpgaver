@page "/solutions/product/{Id:int}"
@rendermode InteractiveServer
@using H125Q2BlazorApp.Models
@using H125Q2BlazorApp.Services
@using Task = System.Threading.Tasks.Task
@inject NavigationManager NavigationManager
@inject ProductService ProductService

<PageTitle>Produktdetaljer</PageTitle>

@if (product == null)
{
    <div class="alert alert-danger">
        <h4>Fejl: Produkt ikke fundet</h4>
        <p>Produktet med ID @Id blev ikke fundet.</p>
        <button class="btn btn-primary" @onclick="GoBack">Tilbage til produkter</button>
    </div>
}
else
{
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-outline-secondary me-3" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Tilbage
        </button>
        <h1 class="mb-0">@product.Title</h1>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" class="img-fluid rounded" alt="@product.Title" style="max-height: 400px; width: 100%; object-fit: contain;">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                    <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                </div>
            }
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="m-0">Produktinformation</h5>
                </div>
                <div class="card-body">
                    <h3 class="text-primary mb-3">@product.Price.ToString("C")</h3>
                    
                    <p class="mb-3">
                        <span class="badge bg-secondary">@product.Category</span>
                    </p>
                    
                    <h5>Beskrivelse</h5>
                    <p>@product.Description</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="m-0">Send besked til sælger</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label for="messageText" class="form-label">Din besked</label>
                <textarea id="messageText" class="form-control" rows="3" @bind="newMessage"></textarea>
            </div>
            
            <button class="btn btn-primary" @onclick="SendMessage" disabled="@string.IsNullOrWhiteSpace(newMessage)">
                <i class="bi bi-send"></i> Send besked
            </button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h5 class="m-0">Beskeder (@product.Messages.Count)</h5>
        </div>
        
        @if (product.Messages.Count == 0)
        {
            <div class="card-body text-center py-5">
                <i class="bi bi-chat text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">Ingen beskeder endnu</h5>
                <p>Vær den første til at sende en besked om dette produkt.</p>
            </div>
        }
        else
        {
            <ul class="list-group list-group-flush">
                @foreach (var message in product.Messages.OrderByDescending(m => m.CreatedAt))
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <strong>@message.SenderName</strong>
                            <small class="text-muted">@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <p class="mb-0">@message.Text</p>
                    </li>
                }
            </ul>
        }
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }
    
    private Product? product;
    private string newMessage = string.Empty;
    private int nextMessageId = 1;
    
    protected override void OnInitialized()
    {
        product = ProductService.GetProductById(Id);
        
        // Hvis produktet har beskeder, find det højeste ID for at undgå duplikater
        if (product?.Messages.Count > 0)
        {
            nextMessageId = product.Messages.Max(m => m.Id) + 1;
        }
    }
    
    private void SendMessage()
    {
        if (product != null && !string.IsNullOrWhiteSpace(newMessage))
        {
            var message = new Message
            {
                Id = nextMessageId++,
                ProductId = product.Id,
                Text = newMessage,
                CreatedAt = DateTime.Now
            };
            
            product.Messages.Add(message);
            newMessage = string.Empty; // Nulstil beskedfeltet
        }
    }
    
    private void GoBack()
    {
        NavigationManager.NavigateTo("/solutions/27");
    }
} 