    private Kort? f√∏rstValgtKort = null;
    private int? f√∏rstValgtIndex = null;

    private System.Threading.Timer? timer;
    private bool kanKlikke = true;

    protected override void OnInitialized()
    {
        StartNytSpil();
    }

    private void StartNytSpil()
    {
        // Nulstil spillets tilstand
        kort.Clear();
        antalFors√∏g = 0;
        antalParFundet = 0;
        spilFuldf√∏rt = false;
        f√∏rstValgtKort = null;
        f√∏rstValgtIndex = null;
        kanKlikke = true;

        // Opret par af kort med forskellige farver/symboler
        var farver = new[] { "#FF5733", "#33FF57", "#3357FF", "#FF33A6", "#33FFF1", "#F1FF33" };
        var symboler = new[] { "‚òÖ", "‚ô•", "‚ô¶", "‚ô†", "‚ô£", "‚óè" };

        // Opret 6 par (12 kort)
        for (int i = 0; i < 6; i++)
        {
            var farve = farver[i];
            var symbol = symboler[i];

            // Tilf√∏j to ens kort (et par)
            kort.Add(new Kort { Farve = farve, Symbol = symbol });
            kort.Add(new Kort { Farve = farve, Symbol = symbol });
        }

        // Bland kortene
        kort = kort.OrderBy(k => Guid.NewGuid()).ToList();

        StateHasChanged();
