                        kort[index].Vendt = false;
                        f√∏rstValgtKort = null;
                        f√∏rstValgtIndex = null;
                        kanKlikke = true;
                        StateHasChanged();
                    });
                }, null, 1000, Timeout.Infinite);
            }
        }

        StateHasChanged();
    }

    public void Dispose()
    {
        timer?.Dispose();
    }

