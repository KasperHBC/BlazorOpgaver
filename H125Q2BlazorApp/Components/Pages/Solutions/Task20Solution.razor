    private void VendKort(int index)
    {
        // Undg√• at klikke hvis allerede et par vendes, eller hvis kortet allerede er fundet/vendt
        if (!kanKlikke || kort[index].Vendt || kort[index].Fundet)
            return;

        // Hvis dette er det f√∏rste kort i et fors√∏g
        if (f√∏rstValgtKort == null)
        {
            f√∏rstValgtKort = kort[index];
            f√∏rstValgtIndex = index;
            kort[index].Vendt = true;
        }
        // Hvis dette er det andet kort i et fors√∏g
        else
        {
            kort[index].Vendt = true;
            antalFors√∏g++;

            // Tjek om kortene matcher (samme farve og symbol)
            if (f√∏rstValgtKort.Farve == kort[index].Farve && f√∏rstValgtKort.Symbol == kort[index].Symbol)
            {
                // Match fundet!
                kort[(int)f√∏rstValgtIndex].Fundet = true;
                kort[index].Fundet = true;
                antalParFundet++;

                // Nulstil valg
                f√∏rstValgtKort = null;
                f√∏rstValgtIndex = null;

                // Tjek om spillet er f√¶rdigt
                if (antalParFundet >= kort.Count / 2)
                {
                    spilFuldf√∏rt = true;
                }
            }
            else
            {
                // Ingen match, vend kortene tilbage efter kort tid
                kanKlikke = false;
                timer?.Dispose();

                // Brug en timer til at vende kortene tilbage efter 1 sekund
                timer = new System.Threading.Timer(state =>
                {
                    InvokeAsync(() =>
