@page "/solutions/28"
@rendermode InteractiveServer
@using H125Q2BlazorApp.Models
@using H125Q2BlazorApp.Services
@using System.Threading.Tasks
@using Task = System.Threading.Tasks.Task
@implements IAsyncDisposable
@inject NavigationManager NavigationManager
@inject ProductService ProductService
@inject FavoriteService FavoriteService

<PageTitle>Implementering: Favorit-liste (watch-list)</PageTitle>

<h1>Implementering: Favorit-liste (watch-list)</h1>

<div class="alert alert-info mb-4">
    <h4>Opgaveinfo</h4>
    <p>Denne opgave demonstrerer brug af JSInterop til at gemme favoritter i localStorage og deling af data via en service.</p>
</div>

<div class="alert alert-primary mb-4">
    <div class="d-flex align-items-center">
        <span class="badge bg-danger text-white rounded-pill fs-5 me-3">
            <i class="bi bi-heart-fill"></i> @FavoriteService.FavoriteCount
        </span>
        <div>
            <p class="mb-0">Du har @FavoriteService.FavoriteCount produkt(er) i dine favoritter</p>
            <p class="mb-0 small text-muted">Favoritter gemmes automatisk i din browser</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="m-0">Produkter</h5>
        <div>
            <a href="/solutions/25" class="btn btn-sm btn-outline-primary">+ Tilføj produkter</a>
            @if (showOnlyFavorites)
            {
                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="ShowAllProducts">
                    <i class="bi bi-grid"></i> Vis alle
                </button>
            }
            else
            {
                <button class="btn btn-sm btn-outline-danger ms-2" @onclick="ShowOnlyFavorites">
                    <i class="bi bi-heart"></i> Vis kun favoritter
                </button>
            }
        </div>
    </div>
    <div class="card-body">
        @if (ProductService.GetAllProducts().Count == 0)
        {
            <div class="alert alert-warning">
                Der er ingen produkter oprettet endnu. 
                <a href="/solutions/25" class="alert-link">Klik her for at oprette produkter</a>
            </div>
        }
        else
        {
            var productsToShow = showOnlyFavorites
                ? ProductService.GetAllProducts().Where(p => FavoriteService.IsFavorite(p.Id)).ToList()
                : ProductService.GetAllProducts();
                
            @if (showOnlyFavorites && !productsToShow.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-heart text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Ingen favoritter</h5>
                    <p>Du har ikke tilføjet nogen produkter til dine favoritter endnu.</p>
                    <button class="btn btn-outline-primary mt-2" @onclick="ShowAllProducts">
                        <i class="bi bi-grid"></i> Vis alle produkter
                    </button>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var product in productsToShow)
                    {
                        <div class="col">
                            <div class="card h-100">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" style="height: 180px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="position-absolute bottom-0 end-0 p-2">
                                        <span class="badge bg-primary rounded-pill">@product.Price.ToString("C")</span>
                                    </div>
                                    
                                    <button class="position-absolute top-0 end-0 btn btn-sm m-2 favorite-button @(FavoriteService.IsFavorite(product.Id) ? "btn-danger" : "btn-outline-danger")"
                                            @onclick="() => ToggleFavorite(product.Id)">
                                        <i class="bi @(FavoriteService.IsFavorite(product.Id) ? "bi-heart-fill" : "bi-heart")"></i>
                                    </button>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@product.Title</h5>
                                    <p class="card-text small text-muted">@product.Category</p>
                                    <p class="card-text">
                                        @(product.Description.Length > 100 
                                        ? product.Description.Substring(0, 100) + "..." 
                                        : product.Description)
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/solutions/product/@product.Id" class="btn btn-sm btn-outline-primary w-100">Se detaljer</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>

<div class="mt-4">
    <button class="btn btn-primary" @onclick="GoBack">Tilbage til detaljer</button>
</div>

@code {
    private bool showOnlyFavorites = false;
    
    protected override async Task OnInitializedAsync()
    {
        // Indlæs favoritter fra localStorage
        await FavoriteService.LoadFavoritesAsync();
        
        // Abonnér på ændringer i favoritter
        FavoriteService.OnFavoritesChanged += StateHasChanged;
    }
    
    public async ValueTask DisposeAsync()
    {
        // Fjern event handler når komponenten destrueres
        FavoriteService.OnFavoritesChanged -= StateHasChanged;
    }
    
    private async Task ToggleFavorite(int productId)
    {
        await FavoriteService.ToggleFavoriteAsync(productId);
    }
    
    private void ShowOnlyFavorites()
    {
        showOnlyFavorites = true;
    }
    
    private void ShowAllProducts()
    {
        showOnlyFavorites = false;
    }
    
    private void GoBack()
    {
        NavigationManager.NavigateTo("/task/28");
    }
}

<style>
    .favorite-button {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s;
    }
    
    .favorite-button:hover {
        transform: scale(1.2);
    }
</style> 