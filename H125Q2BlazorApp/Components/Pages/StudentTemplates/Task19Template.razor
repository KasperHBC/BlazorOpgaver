@page "/student/19"
@rendermode InteractiveServer
@inject H125Q2BlazorApp.Services.TaskService TaskService
@inject NavigationManager NavigationManager

<PageTitle>Opgave 19: Kort Komponent</PageTitle>

<h1>Opgave 19: Kort Komponent</h1>

@{
    var task = TaskService.GetTaskById(19);
    if (task != null)
    {
        <div class="alert alert-info">
            <h4>Opgavebeskrivelse:</h4>
            <p>@task.Description</p>
            
            <h5 class="mt-3">Hints:</h5>
            <div class="mt-2">
                <HintRenderer Hints="@task.Hints" />
            </div>
        </div>
    }
}

<div class="mt-4">
    <button class="btn btn-primary" @onclick="GoBack">Tilbage til opgavedetaljer</button>
</div>

@code {
    private void GoBack()
    {
        NavigationManager.NavigateTo("/task/19");
    }
} 